<tool name="lwtnn" version="1.0-mlhled2">
  <info url="https://github.com/lwtnn/lwtnn"/>
  <lib name="lwtnn"/>
  <client>
    <environment name="LWTNN_BASE" default="/cvmfs/cms.cern.ch/slc6_amd64_gcc630/external/lwtnn/1.0-mlhled2"/>
    <environment name="LIBDIR" default="$LWTNN_BASE/lib"/>
    <environment name="INCLUDE" default="$LWTNN_BASE/include"/>
